{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist/",
    "skipLibCheck": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
