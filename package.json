{
  "name": "react-forms-project",
  "private": true,
  "description": "Top-level react-forms package",
  "version": "0.1.0",
  "author": "Trey Hakanson <treyhakanson@gmail.com>",
  "bugs": {
    "url": "https://github.com/treyhakanson/react-forms/issues"
  },
  "homepage": "https://github.com/treyhakanson/react-forms",
  "license": "MIT",
  "scripts": {
    "build": "yarn core:build && yarn validations:build",
    "sandbox:dev": "yarn workspace @react-forms/sandbox dev",
    "core:build": "yarn workspace @react-forms/core build",
    "validations:build": "yarn workspace @react-forms/validations build",
    "core:dev": "yarn workspace @react-forms/core dev",
    "validations:dev": "yarn workspace @react-forms/validations dev",
    "docs:server": "npx styleguidist server --config ./packages/core/styleguide.config.js",
    "docs:build": "npx styleguidist build --config ./packages/core/styleguide.config.js"
  },
  "workspaces": [
    "packages/*"
  ]
}
